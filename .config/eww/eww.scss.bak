$surface-darkgray: #20252b;
$surface-fg: #949494;
$surface-lightgray: #3d464e;
$surface-gray: #2b3238;
$surface-red: #f87070;

* {
  all: unset;
}

.layout-box {
  font-family: "Phosphor";
  background-repeat: no-repeat;
  background-size: cover;
  padding: 5em;
  color: rgba($surface-fg, 0.8);
}

.net-box,
.bat-box,
.tm-box {
  label {
    font-size: 2em;
  }
}

.close-btn {
  font-size: 2em;
  &:hover {
    color: $surface-red;
  }
}

.btns-box {
  font-size: 2.5em;

  button {
    padding: 0.4em;
    border-radius: 0.1em;
    background-color: rgba($surface-darkgray, 0.6);

    &:hover {
      transition:
        200ms linear background-color,
        border-radius;
      background-color: rgba($surface-lightgray, 0.6);
    }

    &:first-child {
      color: rgba($surface-red, 0.6);
    }
  }
}

.sep {
  font-size: 1.5em;
  padding-top: 0.15em;
  padding-left: 0.2em;
  padding-right: 0.2em;
  color: $surface-lightgray;
}

.sundial-lbl {
  font-size: 1.5em;
  font-weight: bold;
  border-radius: 0.2em;
  border-bottom: 0.2em;
  font-family: "Poiret One";
}
